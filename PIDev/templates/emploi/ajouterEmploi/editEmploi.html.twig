{% extends 'baseF.html.twig' %}

{% block body %}
    <!-- Start Appointment -->
    <section class="appointment">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Ajouter un emploi</h2>
                        <img src="{{ asset('front/img/section-img.png') }}" alt="#">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-12">
                    {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                             <div class="form-group">
                                <label for="debut">Titre</label>
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'id': 'titre'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>
                           
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                <label for="debut">Date debut</label>
                                {{ form_widget(form.start, {'attr': {'class': 'form-control', 'placeholder': 'fin '}}) }}
                                {{ form_errors(form.start) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                            <label for="end">Date fin</label>
                                {{ form_widget(form.end, {'attr': {'class': 'form-control', 'placeholder': 'debut'}}) }}
                                {{ form_errors(form.end) }}
                            </div>
                        </div>
                    </div>

                    
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <div class="form-group">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'description '}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 col-md-4 col-12">
                            <div class="button">
                                {{ form_row(form.Submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="appointment-image">
                        <img src="{{ asset('front/img/contact-img.png') }}" alt="#">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Appointment -->

    {% block javascript %}
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

        {% for flashMessage in app.flashes('success') %}
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Ajouter!',
                    text: '{{ flashMessage }} ðŸ‘',
                    showConfirmButton: true,
                    confirmButtonText: 'Daccord! ',
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '{{ path('app_calendar') }}';
                    }
                });
            </script>
        {% endfor %}

        {% for flashMessage in app.flashes('error') %}
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: '{{ flashMessage }} ðŸ˜ž',
                    showConfirmButton: true,
                    confirmButtonText: 'OK! ',
                });
            </script>
        {% endfor %}
    {% endblock %}
{% endblock %}
