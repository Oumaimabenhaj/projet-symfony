   <script>
    function rateStar(value) {
        // Mettre √† jour la valeur de notation dans l'attribut 'data-rating'
        document.querySelector('.rating').setAttribute('data-rating', value);

        // Mettre √† jour le style des √©toiles
        const stars = document.querySelectorAll('.rating span');
        stars.forEach((star, index) => {
            if (index < value) {
                star.style.color = '#1D7EB6';  // Couleur des √©toiles s√©lectionn√©es
            } else {
                star.style.color = '#E4E7ED';  // Couleur des √©toiles non s√©lectionn√©es
            }
        });

        // Vous pouvez √©galement envoyer la valeur s√©lectionn√©e au serveur via une requ√™te AJAX
        // en utilisant la variable 'value'
    }
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkboxes = document.querySelectorAll('.category-checkbox');

        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                filterProducts();
            });
        });

        function filterProducts() {
            const selectedCategories = Array.from(checkboxes)
                .filter(function (checkbox) {
                    return checkbox.checked;
                })
                .map(function (checkbox) {
                    return checkbox.getAttribute('data-category');
                });

            const products = document.querySelectorAll('.col-md-3.col-xs-6');

            products.forEach(function (product) {
                const productCategory = product.getAttribute('data-category');

                if (selectedCategories.length === 0 || selectedCategories.includes(productCategory)) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        }
    });
</script>
   

