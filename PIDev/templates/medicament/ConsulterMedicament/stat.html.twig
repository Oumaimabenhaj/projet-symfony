    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: labels,
            datasets: [{
                label: 'Nombre de médicament',
                data: data,
                backgroundColor: ['red', 'blue'], // Rouge pour les étiquettes, bleu pour les données
                borderColor: 'white',              // Bordure en blanc
                borderWidth: 1
               
            }]
        },
        options: {
          plugins: {
                title: {
                    display: true,
                    text: 'Nombre de médicament par rapport état médicament'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

