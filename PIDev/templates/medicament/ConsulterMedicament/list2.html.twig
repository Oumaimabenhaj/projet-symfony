<script>
document.addEventListener('DOMContentLoaded', function () {
    var notificationLink = document.getElementById('notificationLink');
    var notificationText = document.getElementById('notificationText');
    
    // Array to store all expired medications
    var expiredMedications = [];

    // Itérer sur chaque ligne de médicament
    var lignesMedicament = document.querySelectorAll('tbody tr');

    lignesMedicament.forEach(function (ligne) {
        // Obtenir la date d'expiration de la ligne
        var dateExpiration = ligne.querySelector('td:nth-child(5)').innerText;

        // Analyser la date d'expiration en utilisant moment.js
        var dateExpirationAnalysee = moment(dateExpiration, 'YYYY-MM-DD');

        // Comparer la date d'expiration analysée avec la date actuelle
        if (dateExpirationAnalysee.isValid() && dateExpirationAnalysee.isBefore(moment())) {
            // Ajouter le médicament expiré à la liste
            expiredMedications.push({
                id: ligne.querySelector('td:first-child').innerText,
                name: ligne.querySelector('td:nth-child(3)').innerText
            });
        }
    });

    // Vérifier s'il y a des médicaments expirés
    if (expiredMedications.length > 0) {
        // Afficher une notification pour tous les médicaments expirés
        var message = "Les médicaments suivants ont expiré:\n";
        expiredMedications.forEach(function (medication) {
            message += "ID: " + medication.id + ", Nom: " + medication.name + "\n";
        });

        // Afficher la notification
        afficherNotification('Médicaments expirés', message);
    }

    function afficherNotification(titre, message) {
        // Mettez à jour le contenu de la notification
        notificationText.innerText = message;

