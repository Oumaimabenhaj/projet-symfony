<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="main">
    <div class="container">
        <div class="signup-content">
            <div class="signup-img">
                <img src="images/signup-img.jpg" alt="Sign Up Image">
            </div>
            
            <div class="signup-form">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.numcarte, 'Numéro de la carte jaune') }}
                    {{ form_widget(form.numcarte, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de la carte jaune'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.numcarte) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.cin, 'CIN') }}
                    {{ form_widget(form.cin, {'attr': {'class': 'form-control', 'placeholder': 'CIN'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.cin) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom') }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.nom) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.prenom, 'Prénom') }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.prenom) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.datenaissance, 'Date de naissance') }}
                    {{ form_widget(form.datenaissance, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.datenaissance) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.genre, 'Genre', {'label_attr': {'for': 'exampleInputName1'}}) }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control', 'placeholder': 'Genre', 'id': 'exampleInputName1'}}) }}
                    <div style ="color:red;"> {{ form_errors(form.genre) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.email, 'Adresse email') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.email) }}</div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.numtel, 'Numéro de téléphone') }}
                    {{ form_widget(form.numtel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.numtel) }}</div>
                </div>
                 <div class="form-group">
                    {{ form_label(form.image, "Image") }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.password, 'Password') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.password) }}</div>
                </div>
                
                <div class="form-group text-center">
    <div class="btn-group">
        {{ form_row(form.Creer, {'attr': {'class': 'btn btn-primary mr-2'}}) }}
        {{ form_row(form.Annuler, {'attr': {'class': 'btn btn-secondary'}}) }}
    </div>
</div>


                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="js/main.js"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
